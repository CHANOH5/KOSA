<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd
	">
	
	<bean id="a" class="com.my.di.dto.A">
		<!-- 생성자 객체를 통해 값을 초기화 가능 -->
		<!-- <constructor-arg value="welcome"></constructor-arg> -->
		<property name="msg" value="안녕하세요"></property>
	</bean>
	
	<bean id="b" class="com.my.di.dto.B">
		<!-- 생성자 객체를 통해 값을 초기화 가능 -->
		<!-- <constructor-arg value="welcome"></constructor-arg> -->
		<property name="no" value="123"></property>
		<property name="a" ref="a"></property>
	</bean>
	
	<bean id="productDAO" class="com.my.product.dao.ProductOracleRepository">

	</bean>
	
	<bean id="productService" class="com.my.product.dao.ProdcutService">
		<property name="repository" ref="productDAO"></property>
	</bean>
	
</beans>